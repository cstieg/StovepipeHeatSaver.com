@model IEnumerable<Cstieg.Sales.Models.ShippingCountry>

@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingScheme.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalShipping)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingScheme.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdditionalShipping)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
