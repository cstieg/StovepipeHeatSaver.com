@model IEnumerable<StovepipeHeatSaver.Models.Faq>

@{
    ViewBag.Title = "FAQ";
}

@section BreadCrumbs
{
    <ul class="breadcrumb" itemscope itemtype="http://schema.org/BreadcrumbList">
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
            <a href="/" itemprop="item">StovePipeHeatSaver</a>
            <meta itemprop="position" content="1" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
            <a href="/Faq" itemprop="item">Frequently Asked Questions</a>
            <meta itemprop="position" content="2" />
        </li>
    </ul>
}

<h2>Frequently Asked Questions</h2>

<div class="container">
    <div id="faqs" class="row">
        @foreach (var faq in Model)
        {
            <article class="col-xs-12 col-sm-6 col-md-4 faq">
                <div class="col-xs-12 faq-inner">
                    <section class="qa-question">
                        @Html.Raw(faq.Question)
                    </section>
                    <section class="qa-answer">
                        @Html.Raw(faq.Answer)
                    </section>
                </div>
            </article>
        }
    </div>
</div>